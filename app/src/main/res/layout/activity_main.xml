<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/createButton"
        android:text="Create Lists"
        android:onClick="goToList"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/readButton"
        android:text="Read Lists"
        android:onClick="readList"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/readButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/mapButton"
        android:text="Go to map"
        android:onClick="localize"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/shoppingButton"
        android:text="do shopping"
        android:onClick="doShopping"
        ></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoppingButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/bluetoothButton"
        android:text="connect to the device"
        android:onClick="connect"
        ></Button>


</RelativeLayout>